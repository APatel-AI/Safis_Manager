{
  "manifest_version": 3,
  "name": "Safis - Smart Bookmark Manager",
  "version": "1.0.0",
  "description": "A smart bookmark manager with floating modal overlay for busy professionals",
  
  "permissions": [
    "bookmarks",
    "storage",
    "activeTab",
    "scripting",
    "system.display",
    "notifications"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "src/background-service.js"
  },
  
  
  "action": {
    "default_title": "Open Safis Bookmark Manager",
    "default_icon": {
      "16": "assets/glasses_emoji.png",
      "32": "assets/glasses_emoji.png",
      "48": "assets/glasses_emoji.png",
      "128": "assets/glasses_emoji.png"
    }
  },
  
  "icons": {
    "16": "assets/glasses_emoji.png",
    "32": "assets/glasses_emoji.png",
    "48": "assets/glasses_emoji.png",
    "128": "assets/glasses_emoji.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["src/modal-injector.js", "assets/*", "window.html", "src/window-script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}